{% extends "baseLogin.html.twig" %}
{% block body %}
    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form path('app_login') }}" method="post">
        <h1 class="text-size-22px mx-auto">Connexion</h1>

        <div class="form-group">
            <label for="username" class="form-label label ">Email</label>
            <div class="input-group col-4">
                <input type="text" id="username" class="form-control mx-auto" name="_username" value="{{ last_username }}" autocomplete="username" required/>
                <div class="input-group-append">
                    <div class="input-group-text"><i class="fas fa-user"></i></div>
                </div>
            </div>
        </div>

        <div class="form-group =">
            <label for="password" class="form-label label">Mot de passe</label>
            <div class="input-group col-4">
                <input type="password" id="password" class="form-control" name="_password" autocomplete="current-password" required/>
                <div class="input-group-append">
                    <div class="input-group-text"><i class="fas fa-lock"></i></div>
                </div>
            </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="form-actions justify-content-center">
            <div class="form-action">
                <button type="submit" class="btn btn-primary">Connexion</button>
                <button class="btn btn-warning"> <a href="{{path('customer_register')}}" >Inscription</a></button>
                <a class="nav-link" href="#"> Mot de passe oubli√© ?</a>
            </div>
        </div>

    </form>
{% endblock %}