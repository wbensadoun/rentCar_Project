{% extends "baseLogin.html.twig" %}
{% block body %}
    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form path('app_login') }}" method="post">
        <h1 class="text-size-22px" style="margin-left: 45%; margin-top: 4%;">Connexion</h1>

        <div class="form-group">

            <div class="input-group col-6 mx-auto" style="margin-top: 4%;">
                <label for="username" class="form-label label" style="margin-right: 76px;">Email :</label>
                <input type="text" id="username" class="form-control mx-auto " name="_username" value="{{ last_username }}" autocomplete="username" required/>
                <div class="input-group-append">
                    <div class="input-group-text"><i class="fas fa-user"></i></div>
                </div>
            </div>
        </div>

        <div class="form-group mx-auto" style="margin-top: 4%;">

            <div class="input-group col-6 mx-auto">
                <label for="password" class="form-label label" style="margin-right: 20px;">Mot de passe :</label>
                <input type="password" id="password" class="form-control mx-auto" name="_password" autocomplete="current-password" required/>
                <div class="input-group-append">
                    <div class="input-group-text"><i class="fas fa-lock"></i></div>
                </div>
            </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="form-actions  mx-auto" style="margin-top: 4%;">
            <div class="form-action" style="margin-left: 45%;">
                <button type="submit" class="btn btn-primary" style="margin-left: -100px;">Connexion</button>
                <button class="btn btn-warning" style="margin-left: 170px;"> <a href="{{path('customer_register')}}" >Inscription</a></button>
                <a class="nav-link" href="#"> Mot de passe oubli√© ?</a>
            </div>
        </div>

    </form>
{% endblock %}