<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <!-- CSS only -->
            <link rel="stylesheet" href="{{ absolute_url(asset('build/css/app.css')) }}">
        {% endblock %}

        {% block javascripts %}
            <script src="{{ absolute_url(asset('build/js/app.js')) }}"></script>
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    <nav class="navbar">
        <ul class="nav partenaire">


            <li class="nav-item active home ">
                <a class="nav-link" id="acceuil" href="{{path('default')}}" value="">Accueil</a>
            </li>
        </ul>

        <form class="form-inline">
            <input type="text" class="research" placeholder="Trouver une voiture">
            <button type="button" class="search btn" name="rechercher"></button>

        </form>
        <p id="versionApp">Rental Car Project</p>
    </nav>
    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

        {% block body %}


        {% endblock %}

    </body>
</html>
