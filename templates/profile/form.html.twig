{% extends 'base.html.twig' %}
{% block title %}

{% endblock %}
{%  block body %}

    {{ form_start(form) }}

    <div class="row">
        <div class="col">
            {{ form_row(form.name) }}
        </div>
        <div class="col">
            {{ form_row(form.firstName) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.address) }}
        </div>
        <div class="col">
            {{ form_row(form.city) }}
        </div>
        <div class="col">
            {{ form_row(form.postalCode) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.phone) }}
        </div>
    </div>
    <div class="row">

        <div class="col">
            {{ form_widget(form.user.email) }}
        </div>
        <div class="col">
            {{ form_row(form.user.userName) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.user.confirmPassword.first) }}
        </div>

        <div class="col">
            {{ form_row(form.user.confirmPassword.second) }}
        </div>
    </div>


    <button type="submit" class="btn btn-primary"> Modifier </button>
    {{ form_end(form) }}
{% endblock %}