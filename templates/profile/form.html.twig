{% extends 'base.html.twig' %}
{% block title %}

{% endblock %}
{%  block body %}

    {{ form_start(form) }}

    <div class="row">
        <div class="col">
            {{ form_row(form.name) }}
        </div>
        <div class="col">
            {{ form_row(form.firstName) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.address) }}
        </div>
        <div class="col">
            {{ form_row(form.city) }}
        </div>
        <div class="col">
            {{ form_row(form.postalCode) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.phone) }}
        </div>
    </div>
    <div class="row">

        <div class="col">
            {{ form_widget(form.user.email) }}
        </div>
        <div class="col">
            {{ form_row(form.user.userName) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.user.confirmPassword.first) }}
        </div>

        <div class="col">
            {{ form_row(form.user.confirmPassword.second) }}
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            {{ form_row(form.photoProfile) }}
        </div>
        <div class="col-6">
            {% if customer.photoProfile is not empty %}
                <a href="{{ path('get_document_customer_admin',{ id:customer.id }) }}">{{ customer.photoProfileOrigFileName }}</a>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            {{ form_row(form.licencePicture) }}
        </div>
        <div class="col-6">
            {% if customer.licencePicture is not empty %}
                <a href="{{ path('get_document_customer_admin',{ id:customer.id }) }}">{{ customer.licencePictureOrigFileName }}</a>
            {% endif %}
        </div>
    </div>
    <button type="submit" class="btn btn-primary"> Modifier </button>
    {{ form_end(form) }}
{% endblock %}