{% extends 'base.html.twig' %}

{% block title %}Liste des Clients{% endblock %}

{% block body %}

    <table class="table">
        <thead>

        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>Adresse</th>
            <th>Ville & Code postale</th>
        </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{  customer.name }}</td>
                <td>{{  customer.firstName }}</td>
                <td>{{  customer.email }}</td>
                <td>{{  customer.phone }}</td>
                <td>{{  customer.address }}</td>
                <td>{{  customer.city }} {{  customer.postalCode }} </td>

                <td>
                    <a class=" btn btn-success " href="{{ path("edit_customer", {id:customer.id}) }}"><i class="fas fa-edit"> Modifier</i></a>
                    <a class=" btn btn-danger " href="{{ path("delete_customer", {id:customer.id}) }}" onclick="return window.confirm('Voulez vous vraiment supprimer ?')"><i class="fas fa-times">  Supprimer</i></a>
                </td>
            </tr>

        {% endfor %}
        </tbody>




    </table>
    <div class="row">
        <div class="col-offset-4 col-6">
            <a class="btn btn-success" href="{{ path('create_customer') }}">Rajouter une voiture</a>
        </div>
    </div>
{% endblock %}
