{% extends 'base.html.twig' %}

{% block title %}Hello CustomerController!{% endblock %}

{% block body %}

    {{ form_start(form) }}
<div class="row">
    <div class="col-6">
    {{ form_row(form.name) }}
    </div>
</div>

    <div class="row">
    {{ form_row(form.firstName) }}
    </div>

    <div class="row">
        {{ form_row(form.address) }}
    </div>

    <div class="row">
        <div class="col-6">
        {{ form_row(form.email) }}
        </div>
    </div>

    <div class="row">
        <div class="col-6">
        {{ form_row(form.phone) }}
        </div>
    </div>

    <div class="row">

        <div class="col-6">
        {{ form_row(form.city) }}
        </div>

        <div class="col-6">
        {{ form_row(form.postalCode) }}
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            {{ form_row(form.photoProfile) }}
        </div>
        <div class="col-6">
            {% if customer.photoProfile is not empty %}
                <a href="{{ path('get_document_customer',{ id:customer.id }) }}">{{ customer.photoProfileOrigFileName }}</a>
            {% endif %}
        </div>
    </div>

    <div class="row">
            <div class="col-6">
                {{ form_row(form.licencePicture) }}
            </div>
        <div class="col-6">
            {% if customer.licencePicture is not empty %}
                <a href="{{ path('get_document_customer',{ id:customer.id }) }}">{{ customer.licencePictureOrigFileName }}</a>
            {% endif %}
        </div>
    </div>
    {% if action == "create" %}
        <button class="btn btn-primary" type="submit">Cr√©er</button>
    {% elseif action == "edit" %}
        <button class="btn btn-primary" type="submit">Modifier</button>
    {% endif %}
    {{ form_end(form) }}
{% endblock %}
