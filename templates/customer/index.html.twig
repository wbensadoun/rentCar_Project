{% extends 'base.html.twig' %}

{% block title %}Hello CustomerController!{% endblock %}

{% block body %}

    {{ form_start(form) }}

    {{ form_row(form.name,{attr:{class:"form-control"} })}}
    <div class="row">
    {{ form_row(form.firstName) }}
    </div>

    <div class="row">
        {{ form_row(form.address) }}
    </div>

    <div class="row">
        {{ form_row(form.email) }}
    </div>

    <div class="row">
        {{ form_row(form.phone) }}
    </div>

    <div class="row">

        <div class="col-6">
        {{ form_row(form.city) }}
        </div>

        <div class="col-6">
        {{ form_row(form.postalCode) }}
        </div>
    </div>


    {% if action == "create" %}
        <button class="btn btn-primary" type="submit">Cr√©er</button>
    {% elseif action == "edit" %}
        <button class="btn btn-primary" type="submit">Modifier</button>
    {% endif %}
    {{ form_end(form) }}
{% endblock %}
