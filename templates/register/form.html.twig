{% extends 'base.html.twig' %}
{% block title %}Hello inscription!{% endblock %}

{% block body %}

    {{ form_start(form) }}
<div class="row">
    <div class="col-3">
        {{ form_row(form.name) }}
    </div>

</div>

    <div class="mb-3 mx-auto">
                    {{ form_row(form.firstName) }}
    </div>

    <div class="mb-3 mx-auto">
                    {{ form_row(form.address) }}
    </div>

    <div class="mb-3">
                    {{ form_row(form.city) }}
    </div>

    <div class="mb-3">
                    {{ form_row(form.postalCode) }}
    </div>

    <div class="mb-3">
                    {{ form_row(form.phone) }}
    </div>

    <div class="mb-3">
                    {{ form_widget(form.user.email) }}
    </div>

    <div class="mb-3">
                    {{ form_row(form.user.userName) }}
    </div>

    <div class="mb-3">
                    {{ form_row(form.user.confirmPassword.first) }}
    </div>

    <div class="mb-3">
                    {{ form_row(form.user.confirmPassword.second) }}
    </div>


        <button type="submit" class="btn btn-primary"> Inscription </button>
    {{ form_end(form) }}


{% endblock %}