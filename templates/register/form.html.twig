{% extends 'base.html.twig' %}
{% block title %}Hello inscription!{% endblock %}

{% block body %}

    {{ form_start(form) }}

    <div class="row">
            <div class="col-3 mx-auto">
                            {{ form_row(form.name) }}
            </div>
    </div>
    <br>

    <div class="row">

            <div class="col-3 mx-auto">
                             {{ form_row(form.firstName) }}
             </div>
    </div>
    <br>

    <div class="row">

            <div class="col-3 mx-auto">
                             {{ form_row(form.address) }}
             </div>
    </div>
    <br>

    <div class="row">

            <div class="col-3 mx-auto">
                             {{ form_row(form.city) }}
             </div>
    </div>
    <br>

    <div class="row">

            <div class="col-3 mx-auto">
                             {{ form_row(form.postalCode) }}
             </div>
    </div>
    <br>

    <div class="row">

            <div class="col-3 mx-auto">
                            {{ form_row(form.phone) }}
            </div>
    </div>
    <br>

    <div class="row">

            <div class="col-3 mx-auto">
                            {{ form_row(form.user.email) }}
            </div>
    </div>
    <br>

    <div class="row">

            <div class="col-3 mx-auto">
                            {{ form_row(form.user.userName) }}
            </div>
    </div>
    <br>

    <div class="row">

            <div class="col-3 mx-auto">
                            {{ form_row(form.user.confirmPassword.first) }}
            </div>
    </div>
    <br>

    <div class="row">

            <div class="col-3 mx-auto">
                            {{ form_row(form.user.confirmPassword.second) }}
            </div>
    </div>
    <br>

        <button type="submit" class="btn btn-primary" style="margin-left: 45%;"> Inscription </button>
    {{ form_end(form) }}


{% endblock %}