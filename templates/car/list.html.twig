{% extends 'base.html.twig' %}

{% block title %}Liste des voitures{% endblock %}

{% block body %}

   <table class="table">
     <thead>

       <tr>
            <th>Nom</th>
            <th>Modele</th>
            <th>Plaque d'immatriculation</th>
            <th>Description</th>
            <th>ann√©e de la voiture</th>
            <th>action</th>
       </tr>
     </thead>
     <tbody>
          {% for car in cars %}
              <tr>
                <td>{{  car.name }}</td>
                <td>{{  car.model }}</td>
                <td>{{  car.numberPlate }}</td>
                <td>{{  car.description }}</td>
                <td>{{  car.startDate | date("d/m/Y") }}</td>
                <td>
                    <a class=" btn btn-success " href="{{ path("edit_car", {id:car.id}) }}"><i class="fas fa-edit"> Modifier</i></a>
                    <a class=" btn btn-danger " href="{{ path("delete_car", {id:car.id}) }}" onclick="return window.confirm('Voulez vous vraiment supprimer ?')"><i class="fas fa-times">   Supprimer</i></a>
                </td>
              </tr>

          {% endfor %}
     </tbody>




   </table>
    <div class="row">
        <div class="col-offset-4 col-6">
        <a class="btn btn-success" href="{{ path('create_car') }}">Rajouter une voiture</a>
        </div>
    </div>
{% endblock %}
