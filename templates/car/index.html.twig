{% extends 'base.html.twig' %}

{% block title %}Hello CustomerController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-4">
            <a class="btn btn-danger" href="{{ path('list_cars') }}"> Retour </a>

        </div>
    </div>
    <div class="form-group">
    {{ form_start(form) }}

                <div class="row">
                    {{ form_row(form.name,{attr:{class:"form-control"} }) }}
                </div>

                <div class="row">
                    {{ form_row(form.model,{attr:{class:"form-control"} }) }}
                </div>

                <div class="row">
                    {{ form_row(form.description) }}
                </div>

                <div class="row">
                    {{ form_row(form.startDate) }}
                </div>
    {% if action == "create" %}
        <button class="btn btn-primary" type="submit">Cr√©er</button>
    {% elseif action == "edit" %}
        <button class="btn btn-primary" type="submit">Modifier</button>
    {% endif %}
    {{ form_end(form) }}
    </div>
{% endblock %}
