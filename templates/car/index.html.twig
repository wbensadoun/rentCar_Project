{% extends 'base.html.twig' %}

{% block title %}Hello CustomerController!{% endblock %}

{% block body %}

    <div class="form-group mt-5" style="margin-left: 40%;">
    {{ form_start(form) }}

                <div class="row mt-2">

                    {{ form_row(form.name) }}

                </div>

                <div class="row mt-2">
                    {{ form_row(form.model) }}
                </div>

                <div class="row mt-2">
                    {{ form_row(form.description) }}
                </div>
                <div class="row mt-2">
                    {{ form_row(form.numberPlate) }}
                </div>

                <div class="row mt-2">
                    {{ form_row(form.picture1) }}
                </div>

                <div class="row mt-2">
                    {{ form_row(form.picture2) }}
                </div>

                <div class="row mt-2">
                    {{ form_row(form.picture3) }}
                </div>

                <div class="row mt-2">
                    {{ form_row(form.startDate) }}
                </div>

    {% if action == "create" %}

        <div class="row mt-5" >
            <div class="col-6">
                <a class="btn btn-danger" href="{{ path('list_cars') }}"> Retour </a>

            </div>

            <div class="col-6" style="margin-left: -36%;">
                <button class="btn btn-primary" type="submit">Cr√©er</button>

            </div>
        </div>
    {% elseif action == "edit" %}
        <button class="btn btn-primary" type="submit">Modifier</button>
        <div class="row">
            <div class="col-4">
                <a class="btn btn-danger" href="{{ path('list_cars') }}"> Retour </a>

            </div>
        </div>
    {% endif %}
    {{ form_end(form) }}
    </div>
{% endblock %}
